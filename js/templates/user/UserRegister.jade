#loginBox
  if loggedIn
    .usernameContainer
      span signed in as 
      #username= username
      button#userOptionsButton Options
  else if registered
    .successMessage
      p Congrats! you now have a cryptic account!
  else 
    h1 Register
    #usernameInput
      .control-group
        input(type="text", placeholder="username") 
      p.message 
    #passwordInput 
      .control-group 
        input(type="password", placeholder="password")
      p.message
    #testerToken.inputField
      input(type="text", placeholder="Test Token")
    // 
        #twoStepAuthInput Enter 2 step authentication code:
          input(type="text")
    .control-group
      a#registerBtn.btn.btn-block.btn-primary.btn-large(href="#register") Register
