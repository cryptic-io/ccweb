#fileInfo 
  .filename 
    p= file.filename
  .boxes
    .filesize.outerBar 
      p.barText Size: #{size}  #{sizeUnit}
    .filetype.outerBar
      p.barText Type: #{file.type}
    //
      .downloadLink Link:
        span
          input(type="text", value="#{downloadLink}")
    .downloadBtn.outerBar.nephritis.pointer
      p.barText Download 
    #sharing
      .shareBtn.outerBar.peter-river.pointer
        p.barText Share
      .subItems
        .outerBar.peter-river.pointer#normalLink
          p.barText Normal Link
        .outerBar.peter-river.pointer
          p.barText Time Limited Link
        .outerBar.peter-river.pointer
          p.barText One Time Only Link
    .deleteBtn.outerBar.pomegranate.pointer
      p.barText Delete
      


